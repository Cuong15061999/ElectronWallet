<style>
    body,
    .signin,
    .signup {
        background-color: mediumspringgreen;
        font-family: 'Montserrat', sans-serif;
        color: rgb(19, 18, 18);
        font-size: 14px;
        letter-spacing: 1px;
    }

    .avatar {
        width: 200px;
        height: 200px;
        margin-left: 24%;
        margin-top: 5px;
        padding-bottom: 20px;
        display: block;
    }

    .page {
        position: absolute;
        height: max-content;
        width: 405px;
        right: 0;
        top: 5%;
        margin-right: 50px;
        padding: 30px 70px;
        background-color: #000000;
        color: white;
        /*background-size: cover;*/
    }

    .header-container{
        width: 100%;
        text-align: center;
    }

    .active {
        border-bottom: 2px solid #1161ed;
    }

    h2 {
        padding-left: 12px;
        font-size: 22px;
        text-transform: uppercase;
        padding-bottom: 5px;
        letter-spacing: 2px;
        display: inline-block;
        font-weight: 100;
    }

    h2:first-child {
        padding-left: 0px;
    }

    span {
        text-transform: uppercase;
        font-size: 12px;
        position: relative;
        top: -65px;
    }

    .text {
        border: none;
        width: 89%;
        padding: 10px 20px;
        display: block;
        height: 15px;
        border-radius: 20px;
        background: rgba(1, 0, 0, 0.1);
        border: 2px solid rgba(255, 255, 255, 0);
        margin-top: 15px;
    }

    input[type="text"],
    input[type="password"],
    input[type="email"],
    input[type="date"] {
        font-family: 'Montserrat', sans-serif;
        color: #000;
        background-color: #FFFFFF;
    }

    label {
        display: inline-block;
        padding-top: 10px;
        padding-left: 5px;
    }

    .signin,
    .signup,
    .repass {
        background-color: #1161ed;
        color: #FFF;
        width: 100%;
        padding: 10px 20px;
        height: 39px;
        border-radius: 20px;
        margin-top: 20px;
        border: none;
    }

    #fg {
        text-align: center;
        display: block;
        top: 30px;
        position: relative;
        text-decoration: none;
        color: rgba(10, 19, 120, 0.2);
    }

    .img-login{
        position: absolute;
        top: 15%;
        left: 10%;
    }

</style>

<div class="img-login">
    <img src="/images/digital-wallet.png">
</div>
<div class="page">
    <div class="header-container">
        <h2 class="active"> Register </h2>
    </div>
    <form action="/register" method="POST">
        <img src="/images/add-user.png" class="avatar">
        <input type="text" class="text" id="name" name="name">
        <span>Name</span>
        <br>
        <input type="text" class="text" id="address" name="address">
        <span>address</span>
        <br>
        <br>
        <input type="date" class="text" id="date" name="date">
        <span>Date</span>
        <br>
        <br>
        <input type="email" class="text" id="email" name="email">
        <span>Email</span>
        <br>
        <br>
        <input type="text" class="text" id="phone" pattern="[0-9]{10,11}" name="phone">
        <span>Phone Number</span>
        <br>
        <br>
        <input type="file" id="id1" accept="image/png, image/jpeg" name="image1">
        <input type="file" id="id2" accept="image/png, image/jpeg" name="image2">
        <br>
        <span>UPload ID Number</span>
        <button class="signup" type="submit">
            Sign Up
        </button>
    </form>
</div>
